<%- include('../inc/top', { title: 'EDIT ACCOUNT' }); %>
<!DOCTYPE html>
<html>
<head>
  <style>
    /* CSS cho form */
    .form-container {
      max-width: 800px;
      margin: 0 auto;
      padding: 20px;
      background-color: white;
      border-radius: 5px;
    }

    .form-container input[type=text],  .form-container input[type=passwd], .form-container input[type=email], .form-container input[type=fullname], .form-container select {
      width: 100%;
      padding: 12px 20px;
      margin: 8px 0;
      display: inline-block;
      border: 1px solid #ccc;
      box-sizing: border-box;
      border-radius: 4px;
    }

    .form-container input[type=submit] {
      background-color: #4CAF50;
      color: white;
      padding: 12px 20px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      float: right;
    }

    .form-container input[type=submit]:hover {
      background-color: #45a049;
    }

    .form-container::after {
      content: "";
      display: table;
      clear: both;
    }
  </style>
</head>
<body>
  <div class="form-container">
    <h2 style="text-align: center;">Edit Account</h2>
    <form action="" method="post">
      <label for="username">Name</label>
      <input type="text" id="username" name="username" value="<%= objAccount.username %>" required>

      <label for="passwd">Password</label>
      <input type="passwd" id="passwd" name="passwd" value="<%= objAccount.passwd %>" required>

      <label for="email">Email</label>
      <input type="email" id="email" name="email" value="<%= objAccount.email %>" required>

      <label for="fullname">Fullname</label>
      <input type="fullname" id="fullname" name="fullname" value="<%= objAccount.fullname %>" required>

     <div style="margin-right: 280px; margin-top: 20px;">
      <input style="width: 200px;" type="submit" value="Save">
     </div>
    </form>
  </div>
</body>
</html>

<%- include('../inc/bottom'); %>
